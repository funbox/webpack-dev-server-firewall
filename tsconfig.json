{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "outDir": "public",
    "rootDir": "src",
  },
  "include": ["src/*"],
  "exclude": ["public", "node_modules"]
}
